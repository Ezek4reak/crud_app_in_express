<table class="table">
                    
    <thead class="thead-dark">
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>@Email</th>
            <th>Gender</th>
            <th>Status</th>
            <th >Actions</th>
        </tr>
    </thead>
    <tbody>
        <% for(var i = 0; i < users.length; i++) { %>
        <tr>
            <td class="col-center"><%= i+1 %></td>
            <td><%= users[i].name %></td>
            <td><%= users[i].email %></td>
            <td><%= users[i].gender %></td>
            <td><%= users[i].status %></td>
            <td class="col-center">
                <a href="/update-user?id=<%= users[i]._id %>" class="btn btn-success btn-sm border-shadow update">
                    <span ><i class="fa fa-pencil" aria-hidden="true"></i></span>
                </a>

                <a  class="btn btn-danger btn-sm border-shadow delete" data-id = <%= users[i]._id %>  >
                    <span ><i class="fa fa-trash" aria-hidden="false"></i></span>
                </a>
            </td>
        </tr>
        <% } %>
    </tbody>
</table>